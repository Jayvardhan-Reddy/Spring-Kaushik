<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.1.xsd">


	<bean id="traingleBeanPostProcessorId" class="org.jay.springprac.TraingleBeanPostProcessor" >
	<!-- this is instatiated before traingle bean bcoz traingle is dependent on ponit A and B as mentioned in properties tag for traiangle --> 
	<property name="pointA" ref="pointA"></property>  
	<property name="pointB" ref="pointB"></property>
	<!-- property pointC is not mentioned inside traingle so it will be instantiated first n then the rest of the beans -->
	<!-- <property name="pointC" ref="pointC"></property> --> <!-- uncomment then u will not get null pointer -->
	</bean>
	<bean id="pointA" class="org.jay.springprac.Point">
	<property name="x" value="0"></property>
	<property name="y" value="0"></property>
	</bean>
	<bean id="pointB" class="org.jay.springprac.Point">
	<property name="x" value="-20"></property>
	<property name="y" value="0"></property>
	</bean>
	<bean id="pointC" class="org.jay.springprac.Point">
	<property name="x" value="20"></property>
	<property name="y" value="0"></property>
	</bean>
 <bean class="org.jay.springprac.DisplayBeanPostProcessor"></bean>
</beans>