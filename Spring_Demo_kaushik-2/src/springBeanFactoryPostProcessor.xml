<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.1.xsd">


	<bean id="traingleBeanFactoryPostProcessorId" class="org.jay.springprac.TraingleBeanFactoryPostProcessor" >
	 
	<property name="pointA" ref="pointA"></property>  
	<property name="pointB" ref="pointB"></property>
	
	<property name="pointC" ref="pointC"></property> 
	</bean>
	<bean id="pointA" class="org.jay.springprac.Point">
	<property name="x" value="${pointA.pointX}"></property> <!-- values are fectched from properties file -->
	<property name="y" value="${pointA.pointY}"></property>
	</bean>
	<bean id="pointB" class="org.jay.springprac.Point">
	<property name="x" value="-20"></property>
	<property name="y" value="0"></property>
	</bean>
	<bean id="pointC" class="org.jay.springprac.Point">
	<property name="x" value="20"></property>
	<property name="y" value="0"></property>
	</bean>
 
 <!-- <bean class="org.jay.springprac.MyFactoryBeanPostProcessor"/> -->
 <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
 <property name="locations" value="pointsconfig.properties"/>
 <!-- <context:property-placeholder location="pointsconfig.properties" /> -->
 </bean>
</beans>